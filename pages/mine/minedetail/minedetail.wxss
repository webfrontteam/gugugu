.page__minedetail{
  width: 100%;
  height: 100px;
  background-color: #FFFFFF;
  /* padding:15px; */
  position:relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
}

.minedetail_text{
  display: flex;
  flex-direction: column
}

.maindetail_userimage{
  margin-left: 10px;
  margin-top: 5px;
  width: 64px;
  height: 64px;
  border-radius: 100px;
  text-align:center;
  vertical-align:top
  }

.wminedetail_username{
  color: #000000;
  font-size: 28px;
  text-align: left;
  font-family: PingFangSC-bold
}

.minedetail_usernum{
  color: rgba(136, 136, 136, 1);
  font-size: 17px;
  text-align: left;
  font-family: PingFangSC-regular;
  }

  .withdraw_btn{
    margin-top: 15px;
    background-color: #FFFFFF;
    color: #000000;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: left;
}

.withdraw_btn::after{
  border: none;
}

.withdraw_btn_image{
  /* margin-right: 8rpx; */
